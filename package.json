{
  "name": "commitlint-plugin-empty-issues-rule",
  "version": "0.0.1",
  "description": "commitlint rule plugin to check include issues",
  "author": "Memory Lovers, LLC<https://github.com/memorylovers>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/memory-lovers",
  "homepage": "https://github.com/memorylovers/commitlint-plugin-empty-issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/memorylovers/commitlint-plugin-empty-issues.git"
  },
  "bugs": {
    "url": "https://github.com/memorylovers/commitlint-plugin-empty-issues/issues"
  },
  "keywords": [
    "commitlint",
    "commitlintplugin",
    "plugin",
    "rules"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "16"
  },
  "packageManager": "pnpm@7.17.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:ts && pnpm build:dts",
    "build:ts": "tsc --noEmit && vite build",
    "build:dts": "tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "changelog": "pnpx changelogithub --dry",
    "prepare": "husky install",
    "ci": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@commitlint/types": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "commitizen": "^4.2.5",
    "commitlint-plugin-empty-issues-rule": "0.0.0-beta.20221201085924",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.0",
    "prettier-plugin-md-nocjsp": "^1.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vitest": "^0.25.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "plugins": [
      "empty-issues-rule"
    ],
    "rules": {
      "empty-issues": [
        1,
        "always"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "git-cz",
      "changelog": {
        "format": "{type}{scope}: {emoji}{subject}",
        "questions": [
          "type",
          "scope",
          "subject"
        ],
        "types": {
          "feat": {
            "description": "Enhancements",
            "emoji": "🚀",
            "value": "feat"
          },
          "perf": {
            "description": "🔥",
            "emoji": "🔥",
            "value": "perf"
          },
          "fix": {
            "description": "Fixes",
            "emoji": "🩹",
            "value": "fix"
          },
          "refactor": {
            "description": "Refactors",
            "emoji": "💅",
            "value": "refactor"
          },
          "docs": {
            "description": "Documentation",
            "emoji": "📖",
            "value": "docs"
          },
          "build": {
            "description": "Build",
            "emoji": "📦",
            "value": "build"
          },
          "types": {
            "description": "Types",
            "emoji": "🌊",
            "value": "types"
          },
          "chore": {
            "description": "Chore",
            "emoji": "🏡",
            "value": "chore"
          },
          "examples": {
            "description": "Examples",
            "emoji": "🏀",
            "value": "examples"
          },
          "test": {
            "description": "Tests",
            "emoji": "✅",
            "value": "test"
          },
          "style": {
            "description": "Styles",
            "emoji": "🎨",
            "value": "style"
          },
          "ci": {
            "description": "CI",
            "emoji": "🤖",
            "value": "ci"
          }
        }
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "ignorePatterns": [
      "**/*.test.ts",
      "dist"
    ]
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.{js,cjs,mjs,ts}": "eslint --ignore-path .gitignore"
  }
}
